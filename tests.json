{
    "protocol" : "droplinked_tests_v1",
    "name" : "random tests for testing the selenium",
    "run_tests" : ["Add multiple Products to cart"],
    "tests" : [
        {
            "test_name" : "LoginWallet",
            "actions" : [
                {
                    "action_name" : "LoadSite",
                    "action_type" : "ChangeUrl",
                    "value" : "https://casper.droplinked.com/"
                },
                {
                    "action_name" : "ClickProfile",
                    "action_type" : "Click",
                    "value" : "/html/body/div[1]/div[1]/header/div[2]/div[2]",
                    "timeout" : 2
                },
                {
                    "action_name" : "ClickLogin",
                    "action_type" : "Click",
                    "value" : "/html/body/div[1]/div[1]/header/div[2]/div[3]/div/div/button[2]",
                    "timeout" : -1
                }
            ]
        },
        {
            "test_name" : "Add Product to cart multiple times",
            "actions" : [
                {
                    "action_name" : "GotoProduct",
                    "action_type" : "ChangeUrl",
                    "value" : "https://casper.droplinked.com/product/642aa5367bf52be588207978",
                    "timeout" : 4
                },
                {
                    "action_name" : "Add to cart", 
                    "action_type" : "Click", 
                    "value" : "/html/body/div[1]/div[1]/div[2]/div/div/div/div[1]/div[2]/div/button",
                    "amount" : 3,
                    "timeout" : 4
                },
                {
                    "action_name" : "Go to cart",
                    "action_type" : "ChangeUrl",
                    "value" : "https://casper.droplinked.com/cart",
                    "timeout" : 4
                }
            ]
        },
        {
          "test_name" :"Add multiple Products to cart",
          "actions" : [
            {
                "action_name" : "GotoProduct1",
                "action_type" : "ChangeUrl",
                "value" : "https://casper.droplinked.com/product/642aa5367bf52be588207978",
                "timeout" : 4
            },
            {
                "action_name" : "Add P1 to cart 3 times", 
                "action_type" : "Click", 
                "value" : "/html/body/div[1]/div[1]/div[2]/div/div/div/div[1]/div[2]/div/button",
                "amount" : 3,
                "timeout" : 4
            },
            {
                "action_name" : "GotoProduct2",
                "action_type" : "ChangeUrl",
                "value" : "https://casper.droplinked.com/product/642aa6ca7bf52be588207a37",
                "timeout" : 4
            },
            {
                "action_name" : "Add P2 to cart 2 times", 
                "action_type" : "Click", 
                "value" : "/html/body/div[1]/div[1]/div[2]/div/div/div/div[1]/div[2]/div/button",
                "amount" : 2,
                "timeout" : 4
            },
            {
                "action_name" : "Go to cart",
                "action_type" : "ChangeUrl",
                "value" : "https://casper.droplinked.com/cart",
                "timeout" : 4
            },
            {
                "action_name" : "Check cart items",
                "action_type" : "CheckCart",
                "value" : {
                    "total_price" : "2.00",
                    "total_items" : 5
                },
                "timeout" : 4
            }
          ]  
        },
        {
            "test_name" : "LogoutWallet",
            "actions" : [
                {
                    "action_name" : "LoadSite",
                    "action_type" : "ChangeUrl",
                    "value" : "https://casper.droplinked.com/"
                },
                {
                    "action_name" : "ClickProfile",
                    "action_type" : "Click",
                    "value" : "/html/body/div[1]/div[1]/header/div[2]/div[2]"
                },
                {
                    "action_name" : "ClickLogout",
                    "action_type" : "Click",
                    "value" : "/html/body/div[1]/div[1]/header/div[2]/div[3]/div/div[3]"
                }
            ]
        }
    ]
}